<div class="app-header">
    <div class="container">
        <div class="row">
            <h1 class="col-md-3 app-header-title">
                <img src="static/images/logo-small.png" alt="playMe ap logo"/>
                playMe ap <a class="app-header-title__link" href="https://vk.com/playmeap" target="_blank">группа в контакте</a>
            </h1>
            <div class="col-md-6 player-controller-player">

            </div>
        </div>
    </div>

</div>

<div class="player-controller">

    <div class="container">
        <div class="row">
            <div class="col-sm-12 player-controller-controls">
                <button class="player-controller-control player-controller-control__play fa fa-play"></button>
                <button class="player-controller-control player-controller-control__pause fa fa-pause display-none"></button>
                <button class="player-controller-control player-controller-control__backward fa fa-backward"></button>
                <button class="player-controller-control player-controller-control__forward fa fa-forward"></button>
                <button class="player-controller-control player-controller-control__stop fa fa-stop"></button>
                <button class="player-controller-control player-controller-control__repeat fa fa-repeat"></button>
                <button class="player-controller-control player-controller-control__bullhorn fa fa-bullhorn"></button>

                <div class="player-controller-controls-volume-wrap">
                    <div class="player-controller-controls-volume">
                        <span class="player-controller-controls-volume__value" style="left:50%"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12 player-controller-search">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <input class="player-controller-search__input" type="text" placeholder="название аудиозаписи, id или имя друга"/>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>